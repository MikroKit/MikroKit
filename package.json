{
  "name": "mikrokit",
  "description": "MikroKit is framework to build and manage REST APIs",
  "version": "0.1.0",
  "main": "index.js",
  "homepage": "https://github.com/mikrokit/mikrokit#readme",
  "scripts": {
    "test": "lerna run test",
    "format": "prettier --write packages/**/*.ts",
    "lint": "lerna run lint",
    "lint-pre-commit": "npm run lint -ws",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "deepkit-install": "deepkit-type-install",
    "auto-readme": "embedme README.md",
    "publish-to-npmjs": "npx lerna publish from-package --no-private",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:mikrokit/mikrokit.git"
  },
  "keywords": [
    "typescript",
    "API",
    "RPC",
    "json",
    "schema",
    "generate",
    "server",
    "serverless",
    "framework",
    "node"
  ],
  "author": "ma-jerez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikrokit/issues"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "embedme": "^1.22.1",
    "eslint": "^8.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3",
    "node-fetch": "^2.6.7",
    "nx": "15.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.5",
    "typescript": "4.6"
  },
  "workspaces": [
    "packages/router",
    "packages/http",
    "packages/serverless",
    "packages/compiled-app",
    "packages/client",
    "packages/spec-generator"
  ]
}
