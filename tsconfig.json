{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "outDir": ".dist",
    "paths": {
      "@mikrokit/*": ["packages/*"]
    }
  },
  "reflection": true,
  "exclude": ["node_modules", ".dist"]
}
