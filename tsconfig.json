{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "lib": ["es6", "ES2021"],
    "outDir": ".dist",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "sourceMap": true,
    "paths": {
      "@mionkit/*": ["packages/*"],
    },
  },
  "exclude": ["node_modules", ".dist"],
  "reflection": true,
}
