{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es6",
      "ES2021"
    ],
    "outDir": ".dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@mikrokit/*": [
        "packages/*"
      ]
    },
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "reflection": true,
  "exclude": [
    "node_modules",
    ".dist"
  ],
  "references": [
    {
      "path": "packages/router"
    },
    {
      "path": "packages/http"
    },
    {
      "path": "packages/serverless"
    },
    {
      "path": "packages/compiled-app"
    },
    {
      "path": "packages/codegen"
    },
    {
      "path": "packages/client"
    }
  ]
}