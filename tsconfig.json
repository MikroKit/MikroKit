{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node16",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "lib": ["es6", "ES2021"],
    "outDir": ".dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@mionkit/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", ".dist"],
  "references": [
    {"path": "packages/core"},
    {"path": "packages/core"},
    {"path": "packages/runtype"},
    {"path": "packages/router"},
    {"path": "packages/http"},
    {"path": "packages/serverless"},
    {"path": "packages/codegen"},
    {"path": "packages/client"}
  ],
  "reflection": true
}
