{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["test", "lint", "format", "build", "build:cjs", "build:esm"]
      }
    }
  },
  "targetDefaults": {
    "lint": {
      "dependsOn": []
    },
    "test": {
      "dependsOn": [],
      "outputs": ["{workspaceRoot}/.coverage"]
    },
    "build": {
      "dependsOn": ["lint", "test", "^build"],
      "outputs": ["{workspaceRoot}/.dist"]
    },
    "auto-readme": {
      "dependsOn": [],
      "outputs": ["{workspaceRoot}/**/*.md"]
    },
    "clean": {
      "dependsOn": []
    }
  },
  "defaultBase": "master"
}
