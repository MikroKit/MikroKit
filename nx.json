{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["test", "lint", "format", "build"]
      }
    }
  },
  "targetDefaults": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["{workspaceRoot}/.coverage"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{workspaceRoot}/.dist"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    }
  },
  "defaultBase": "master"
}
