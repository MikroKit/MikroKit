{
  "name": "@mikrokit/cli",
  "version": "0.0.0",
  "description": "mikrokit command line tool",
  "keywords": [
    "cli",
    "mikrokit",
    "fastify",
    "rest",
    "api"
  ],
  "author": "ma jerez <jerez.m82@gmail.com>",
  "homepage": "https://github.com/mikrokit/mikrokit/tree/main/packages/cli#readme",
  "license": "MIT",
  "main": ".dist/cli.js",
  "types": ".dist/cli.d.ts",
  "directories": {
    "lib": ".dist",
    "test": "__tests__"
  },
  "files": [
    ".dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikrokit/mikrokit.git"
  },
  "scripts": {
    "test": "cd ../.. && jest packages/cli/src  && cd packages/cli",
    "dev": "rimraf .dist && tsc --watch --build tsconfig.build.json",
    "dev:test": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "build": "rimraf .dist && tsc --build tsconfig.build.json"
  },
  "bugs": {
    "url": "https://github.com/mikrokit/mikrokit/issues"
  },
  "dependencies": {
    "commander": "^8.3.0"
  }
