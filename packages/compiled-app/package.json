{
  "name": "@mikrokit/compiled-app",
  "version": "0.1.0",
  "description": "Compiled app to be used in js libraries with needing to compile",
  "keywords": [
    "typescript",
    "types",
    "models",
    "json",
    "schema",
    "generate"
  ],
  "author": "ma jerez <jerez.m82@gmail.com>",
  "homepage": "https://github.com/mikrokit/mikrokit/tree/main/packages/compiled-app#readme",
  "license": "MIT",
  "main": ".dist/index.js",
  "types": ".dist/index.d.ts",
  "directories": {
    "lib": ".dist",
    "test": "__tests__"
  },
  "files": [
    ".dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikrokit/mikrokit.git"
  },
  "scripts": {
    "test": "jest",
    "dev": "rimraf .dist && tsc --build tsconfig.build.json --watch",
    "dev:test": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "build": "rimraf .dist && tsc --build tsconfig.build.json",
    "clean": "rimraf .dist"
  },
  "bugs": {
    "url": "https://github.com/mikrokit/mikrokit/issues"
  }
}
